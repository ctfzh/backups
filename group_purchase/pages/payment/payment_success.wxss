/* 支付成功 */
page{
	background-color: #FFF;
}

.pay_suc_max{
	display: flex;
	flex-flow: column;
	align-items: center;
}

.title{
	display: flex;
	align-items: center;
	margin-top: 25rpx;
	color: #2B2E33;
	font-size: 32rpx;
	line-height: 32rpx;
}

.check_out_img{
	width: 32rpx;
	height: 32rpx;
	display: flex;
	margin-right: 25rpx;
}
.check_out_img image{
	width: 100%;
	height: 100%;
}

.text{
	font-size: 26rpx;
	line-height: 26rpx;
	margin-top: 20rpx;
}

.code_text{
	font-size: 32rpx;
	margin-top: 80rpx;
	line-height: 32rpx;
}

.code{
	width: 507rpx;
	height: 580rpx;
	box-shadow: 0rpx 10rpx 28rpx RGBA(215, 215, 217, 0.6);
	margin-top: 80rpx;
	display: flex;
	flex-flow: column;
	align-items: center;
	justify-content: center;
}

.un_code{
	width: 408rpx;
	height: 80rpx;
	display: flex;
}

.qr_code{
	width: 408rpx;
	height: 408rpx;
	display: flex;
}
.un_code image,
.qr_code image{
	width: 100%;
	height: 100%;
}

.an{
	width: 400rpx;
	height: 90rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	background-color: #F24B4B;
	border-radius: 6rpx;
	color: #FFF;
	margin-top: 80rpx;
	font-size: 32rpx;
	font-weight: bold;
}