/* 团购详情 */
@import "/pages/restrictions/details";

.advertisement{
	height: 320rpx;
	display: flex;
}
.advertisement image{
	width: 100%;
	height: 100%;
}

.goods_h2{
	margin-top: 20rpx;
	display: flex;
	justify-content: space-between;
}
.goods_label{
	height: 24rpx;
	display: flex;
	align-items: center;
}
.label_item{
	margin-right: 20rpx;
	display: flex;
	align-items: center;
}
.label_img{
	width: 22rpx;
	height: 22rpx;
	display: flex;
	margin-right: 10rpx;
}
.label_img image{
	width: 100%;
	height: 100%;
}
.label_text{
	font-size: 24rpx;
}

.goods_title{
	height: 140rpx;
	flex-flow: column;
	justify-content: center;
}
.title_text{
	width: 100%;
	display: flex;
}
.title{
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.goods_h2{
	width: 100%;
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-top: 2rpx;
}

.sales_volume{
	font-size: 24rpx;
	margin-top: 2rpx;
}

.buying{
	display: flex;
	overflow: hidden;
}

.buying_left{
	width: 430rpx;
	background-color: #291F1F;
	display: flex;
	flex-flow: column;
	justify-content: center;
	padding-left: 43rpx;
}
.price{
	display: flex;
	align-items: center;
}
.discount{
	background: #F24B4B;
	color: #fff;
	font-weight: normal;
	margin-left: 10rpx;
}
.original_price{
	text-align: left;
	font-weight: normal;
}

.buying_right{
	flex: 1;
}