/* 我的 */
.user_top{
	height: 214rpx;
	background: linear-gradient(to bottom, #DB4649 ,#D53C3E);
	display: flex;
	flex-flow: column;
	align-items: center;
	justify-content: center;
}
.portrait{
	width: 115rpx;
	height: 115rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 5rpx;
	background-color: RGBA(255, 255, 255, 0.5);
	border-radius: 100%;
}
.portrait_img{
	width: 100%;
	height: 100%;
	border-radius: 100rpx;
	overflow: hidden;
}

.name{
	margin-top: 18rpx;
	font-size: 28rpx;
	line-height: 28rpx;
	color: #fff;
}

.jump_item{
	height: 106rpx;
	background-color: #fff;
	margin-top: 20rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0rpx 17rpx 0rpx 30rpx;
}

.jump_title{
	display: flex;
	align-items: center;
}
.jump_img{
	width: 40rpx;
	height: 40rpx;
	display: flex;
	margin-right: 5rpx;
}
.jump_img image{
	width: 100%;
	height: 100%;
}
.jump_text{
	font-size: 28rpx;
}

.arrow_img{
	width: 40rpx;
	height: 40rpx;
	display: flex;
	margin-right: 5rpx;
}
.arrow_img image{
	width: 100%;
	height: 100%;
}