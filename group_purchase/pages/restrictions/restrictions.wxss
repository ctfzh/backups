/* 限时抢购 */
.restrictions{
	height: 100vh;
}

.condition{
	position: relative;
	display: flex;
	justify-content: space-around;
	height: 85rpx;
	font-size: 28rpx;
	font-weight: bold;
	background-color: #fff;
	z-index: 2;
}
.condition_max{
	height: 85rpx;
}
.condition_text{
	flex: 1;
	height: 100%;
	display: flex;
	align-items: center;
	justify-content: center;
}

.condition_scroll{
	position: fixed;
	top: 0rpx;
	left: 0rpx;
	right: 0rpx;
	z-index: 3;
	box-shadow: 0rpx 0rpx 10rpx #bdbdbd;
}

.restrictions_bottom{
	position: relative;
	z-index: 2;
}
.bottom{
	min-height: 100%;
}

.bottom_item{
	margin-top: 31rpx;
	background-color: #fff;
}
.bottom_item:last-child{
	margin-bottom: 30rpx;
}

.goods_img{
	width: 100%;
	height: 320rpx;
	display: flex;
}
.goods_img image{
	width: 100%;
	height: 100%;
}
.goods_info{
	padding: 30rpx;
}

.goods_title{
	font-size: 32rpx;
	font-weight: bold;
	line-height: 34rpx;
}
.goods_h1{
	color: #757A80;
	margin-top: 20rpx;
	height: 32rpx;
	display: flex;
	align-items: center;
	font-size: 24rpx;
}
.discount{
	width: 84rpx;
	height: 100%;
	margin-left: 20rpx;
	background-color: #F24B4B;
	color: #fff;
	font-size: 22rpx;
	text-align: center;
	line-height: 32rpx;
	border-radius: 2rpx;
}

.goods_h2{
	font-size: 24rpx;
	margin-top: 24rpx;
}

.goods_operate{
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-top: 25rpx;
}

.goods_money{
	font-size: 24rpx;
	font-weight: bold;
}
.money{
	font-size: 48rpx;
}
.price{
	margin-left: 13rpx;
	color: #8D9299;
	text-decoration:line-through;
}
.surplus{
	margin-left: 20rpx;
	font-weight: normal;
	color: #4B5059;
}

.goods_an{
	width: 202rpx;
	height: 58rpx;
	font-size: 28rpx;
	color: #fff;
	border-radius: 30rpx;
	line-height: 58rpx;
	text-align: center;
	background-color: #F23D40;
}