/* 好店 */
.store{
	height: 100vh;
}

.store_bottom{
	position: relative;
	z-index: 2;
}
.bottom{
	min-height: 100%;
}

.screen_max{
	height: 224rpx;
}
.screen_menu{
	top: 225rpx;
}

.store_item{
	padding: 30rpx;
	display: flex;
	background-color: #fff;
	margin-top: 10rpx;
}
.goods_img{
	width: 160rpx;
	height: 150rpx;
	border-radius: 4rpx;
	display: flex;
	overflow: hidden;
}

.goods_img image{
	width: 100%;
	height: 100%;
}
.goods_info{
	flex: 1;
	margin-left: 30rpx;
}

.info_h1{
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.goods_title{
	flex: 1;
	font-size: 28rpx;
	line-height: 28rpx;
	font-weight: bold;
}

.distance{
	font-size: 24rpx;
}

.info_h2{
	display: flex;
	align-items: center;
	margin-top: 25rpx; 
	font-size: 24rpx;
	margin-bottom: 10rpx;
}
.label{
	height: 30rpx;
	line-height: 30rpx;
	padding: 0rpx 18rpx;
	background-color: #EEE;
	border-radius: 3rpx;
	font-size: 22rpx;
	margin-right: 20rpx;
}

.info_h3{
	display: flex;
	align-items: center;
	padding-top: 20rpx;
	font-size: 24rpx;
}
.info_h3_item{
	width: 34rpx;
	height: 34rpx;
	border-radius: 3rpx;
	margin-right: 20rpx;
	background-color: #F6535D;
	color: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
}

.back{
	background-color: #F79900;
}