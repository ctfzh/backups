/* 申请退款 */

.reund_titel{
	padding: 25rpx 30rpx;
	font-size: 28rpx;
}

.reund_item{
	height: 106rpx;
	background-color: #fff;
	display: flex;
	align-items: center;
	padding: 0rpx 40rpx 0rpx 30rpx;
	justify-content: space-between;
	font-size: 28rpx;
	border-top: 1rpx solid #E3E4E5;
}
.reund_titel + .reund_item{
	border: 0rpx;
}

.check_out_img{
	width: 32rpx;
	height: 32rpx;
	display: flex;
}
.check_out_img image{
	width: 100%;
	height: 100%;
}

.reund_total{
	margin-top: 20rpx;
	border: 0rpx;
}

.refund_an{
	height: 90rpx;
	margin: 80rpx 30rpx;
	border-radius: 6rpx;
	background-color: #F24B4B;
	color: #fff;
	font-size: 32rpx;
	font-weight: bold;
	line-height: 90rpx;
	text-align: center;
}

.refund_an_c{
	background-color: #A2A4A6;
}