/* 订单详情 */
.details_max{
	padding-bottom: 40rpx;
}

.details_top{
	background-color: #fff;
	padding: 0rpx 30rpx;
}

.goods_info{
	display: flex;
	padding: 30rpx 0rpx;
}

.goods_img{
	width: 140rpx;
	height: 130rpx;
	display: flex;
	overflow: hidden;
	border-radius: 4rpx;
}

.goods_img image{
	width: 100%;
	height: 100%;
}

.goods_right{
	flex: 1;
	display: flex;
	align-items: center;
}
.goods{
	flex: 1;
	height: 100%;
	margin: 0rpx 20rpx;
}
.goods_title{
	font-size: 28rpx;
	font-weight: bold;
	line-height: 28rpx;
}

.goods_text{
	font-size: 24rpx;
	font-weight: bold;
	line-height: 24rpx;
	margin-top: 20rpx;
}

.goods_money{
	font-size: 24rpx;
	margin-top: 29rpx;
	line-height: 32rpx;
}
.price{
	font-size: 32rpx;
	font-weight: bold;
}

.arrow{
	width: 40rpx;
	height: 40rpx;
	display: flex;
}
.arrow image{
	width: 100%;
	height: 100%;
}

.label{
	padding-bottom: 27rpx;
	display: flex;
	align-items: center;
}

.label_item{
	flex: 1;
	display: flex;
	align-items: center;
}

.label_img{
	width: 22rpx;
	height: 22rpx;
	display: flex;
	margin-right: 10rpx;
}
.label_img image{
	width: 100%;
	height: 100%;
}
.label_text{
	font-size: 24rpx;
}

.pay{
	padding-bottom: 40rpx;
}
.pay_an{
	height: 90rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 6rpx;
	background-color: #F24B4B;
	color: #fff;
	font-size: 32rpx;
	font-weight: bold;
}

.voucher{
	background-color: #fff;
	margin-top: 20rpx;
}

.voucher_title{
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 30rpx;
	padding-left: 0rpx;
	margin-left: 30rpx;
	border-bottom: 1rpx solid #E3E4E5;
}

.voucher_text{
	display: flex;
	align-items: center;
	font-size: 28rpx;
	font-weight: bold;
}

.voucher_time{
	margin-left: 10rpx;
	font-size: 24rpx;
	font-weight: normal;
}

.voucher_state{
	font-size: 28rpx;
	font-weight: bold;
}

.voucher_code{
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 40rpx 30rpx;
}

.code{
	font-size: 32rpx;
}
.code_color1{
	color: #34BA9B;
}

.see_code{
	height: 86rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.code_img{
	width: 40rpx;
	height: 40rpx;
	display: flex;
}
.code_img image{
	width: 100%;
	height: 100%;
}
.code_text{
	font-size: 28rpx;
	margin-left: 5rpx;
}

.store{
	background-color: #fff;
	margin-top: 20rpx;
}

.store_top{
	padding: 30rpx;
	padding-left: 0rpx;
	margin-left: 30rpx;
	border-bottom: 1rpx solid #E3E4E5;
	font-size: 28rpx;
	font-weight: bold;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.top_right{
	display: flex;
	align-items: center;
	line-height: 28rpx;
}

.store_bottom{
	padding: 30rpx;
	display: flex;
	align-items: center;
}

.bottom_left{
	flex: 1;
}
.store_title{
	font-size: 32rpx;
	font-weight: bold;
	line-height: 32rpx;
}

.store_address{
	margin-top: 30rpx;
	display: flex;
	align-items: center;
	font-size: 26rpx;
}

.address_img{
	width: 30rpx;
	height: 30rpx;
	display: flex;
}
.address_img image{
	width: 100%;
	height: 100%;
}

.address_text{
	max-width: 420rpx;
}

.distance{
	margin: 0rpx 15rpx;
	padding: 0rpx 15rpx;
	color: #A8ACB3;
	border-left: 2rpx solid #E3E4E5;
	line-height: 22rpx;
}

.phone_img{
	width: 80rpx;
	height: 80rpx;
	display: flex;
}
.phone_img image{
	width: 100%;
	height: 100%;
}

.order{
	margin-top: 20rpx;
	background-color: #fff;
}

.order_title{
	margin-left: 30rpx;
	padding: 30rpx;
	padding-left: 0rpx;
	font-size: 28rpx;
	font-weight: bold;
	border-bottom: 1rpx solid #E3E4E5;
}

.order_info{
	padding: 30rpx;
}

.info_item{
	padding-top: 17rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 24rpx;
}
.info_item:last-child{
	padding: 0rpx;
}

.mask_code{
	position: fixed;
	top: 0rpx;
	bottom: 0rpx;
	left: 0rpx;
	right: 0rpx;
	background-color: rgba(0, 0, 0, 0.4);
	align-items: center;
	justify-content: center;
	transition: all 0.3ms;
	opacity: 0.5;
	display: none;
}
.mask_code_sele{
	display: flex;
	transition: all 0.3ms;
	opacity: 1;
}

.mask{
	position: relative;
	width: 550rpx;
	height: 642rpx;
	border-radius: 18rpx;
	background-color: #fff;
	display: flex;
	flex-flow: column;
	align-items: center;
}

.mask_title{
	padding-top: 38rpx;
	font-size: 28rpx;
}

.close_img{
	position: absolute;
	top: 0rpx;
	right: 0rpx;
	width: 40rpx;
	height: 40rpx;
	display: flex;
	padding: 40rpx 25rpx;
}
.close_img image{
	width: 100%;
	height: 100%;
}

.un_code{
	width: 416rpx;
	height: 72rpx;
	display: flex;
	margin-top: 60rpx;
}

.un_code image{
	width: 100%;
	height: 100%;
}



.qr_code{
	width: 319rpx;
	height: 319rpx;
	display: flex;
	margin-top: 60rpx;
}

.qr_code image{
	width: 100%;
	height: 100%;
}
