/*引用全局样式  */
@import "../../app.wxss";
/* 图文组件CSS */
.picture_text_style{
  padding: 0rpx 20rpx;
  background-color: #fff;
  overflow: hidden;
}

.picture_text_right_h1{
  margin: 10rpx 0rpx;
  font-size: 32rpx;
}
.picture_text_right_h2{
  font-size: 26rpx;
}

/*图文样式一  */
.picture_text_style1{
}
 .picture_text_list{
  padding: 20rpx 0rpx;
  position: relative;
  display: flex;
  flex-flow: row nowrap;
}
.picture_text_style1 .picture_text_left_img{
  width: 280rpx;
  height:180rpx;
}
.picture_text_style1 .segmenting_line{
  position: absolute;
  top: 0;
  left: 0rpx;
  right: 0rpx;
  border-width: 0rpx;
  border-style: solid;
  border-top-width: 1rpx;
}

.picture_text_style1 .picture_text_right{
  flex: 1;
  margin-left: 20rpx;
}
 .picture_text_style1 .picture_text_right_h1 {
   margin: -5rpx 0rpx 10rpx 0rpx;
} 

/*图文样式二  */
.picture_text_style2{
display: flex;
flex-flow: row wrap;
justify-content: space-between;
}
.picture_text_style2 .picture_text_list{
  float: left;
  width: 345rpx;
  flex-flow: column;
}
.picture_text_style2 .picture_text_left_img{
  width: 100%;
  height: 220rpx;
}
.picture_text_style2 .picture_text_right_h1{
  -webkit-line-clamp: 1; /** 显示的行数 **/
}
