/*图文样式三  */
.picture_text_style3 .picture_text_list{
  float: left;
  width: 100%;
  flex-flow: column;
}
.picture_text_style3 .picture_text_left_img{
  width: 100%;
  height: 360rpx;
}
.picture_text_style3 .picture_text_right_h1{
  -webkit-line-clamp: 1; /** 显示的行数 **/
}
