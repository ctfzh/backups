	font-size: 26rpx;
}

.Relevant{
	display: flex;
	margin: 30rpx 0 60rpx 0;
	background-color: #FFF;
}
.Relevant_itme{
	width: 25%;
	text-align: center;
	color: #4da2fd;
	font-size: 30rpx;
}
.relevant_img{
