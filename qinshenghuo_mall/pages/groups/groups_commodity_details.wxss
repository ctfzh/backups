	margin-top: 1rpx;
}
.promotions_activity_list_option image{
	width: 40rpx;
	height: 40rpx;
}
.promotions_activity_list_text{
	flex: 1;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	margin: 0 0 0 25rpx;
	font-size: 30rpx;
}
