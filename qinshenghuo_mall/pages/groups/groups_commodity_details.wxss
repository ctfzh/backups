/*活动模块CSS=>开始  */
.goods_activity{
	padding:25rpx 25rpx 0rpx 25rpx;
	font-size: 30rpx;
	background-color: #fff;
	display: flex;
	align-items: center;
	border: 1rpx solid #e5e5e5;
	border-left: none;
	border-right: none;
}
.goods_activity_left{
	flex: 1;
}
.promotions_point{
	width: 40rpx;
	height: 40rpx;
	margin-top: -25rpx;
}
.promotions_point image{
	width: 40rpx;
	height: 40rpx;
}
.goods_activity_list{
	display: flex;
	align-items: flex-start;
	flex-flow: row wrap;
	padding-bottom: 25rpx;
}
.goods_activity_label{
	color: #F03F2B;
	border: 1rpx solid #F03F2B;
	padding: 2rpx 5rpx;
	font-size: 24rpx;
	margin-top: 2rpx;
}
.goods_activity_discount{
	flex: 1;
	margin-left: 25rpx;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis; 
}
/*弹出窗CSS  */
.activity_eject{
}
.activity_mask{
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 9;
	background-color: #000;
	opacity: 0.5;
}
.activity_layer{
	position: fixed;
	width: 100%;
	min-height: 400rpx;
	background-color: #fff;
	bottom: 0;
	z-index: 10;
}
.activity_layer_close{
	width: 50rpx;
	height: 50rpx;
	position: absolute;
	right: 10rpx;
	margin-top: 20rpx;
}
.activity_layer_close image{
	width: 40rpx;
	height: 40rpx;
	margin: 5rpx;
}
.activity_layer_h1{
	width: 100%;
	padding: 25rpx;
	font-size: 32rpx;
	border-bottom: 1rpx solid #e5e5e5;
	text-align: center;
}
.activity_layer{
	transform:translateY(150%);
	transition:all 0.3s ease;
}
.transform{
	transform:translateY(0);
}
/*弹出窗促销活动CSS  */
.promotions_activity_list{
	display: flex;
	flex-flow: row wrap;
	align-items: center;
	padding: 25rpx 0;
	border-top: 1rpx solid #e5e5e5;
	margin: -1rpx 25rpx 0rpx 25rpx;
}
.promotions_activity_list_option{
	width: 40rpx;
