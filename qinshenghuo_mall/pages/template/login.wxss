.dialog__mask_login {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.5);
  display: none;
}

.dialog__container_login {
  position: fixed;
  bottom: 0;
  width: 750rpx;
  transform: translateY(150%);
  transition: all 0.4s ease;
  z-index: 11;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.dialog--show .dialog__container_login {
  transform: translateY(0);
}

.dialog--show .dialog__mask_login {
  display: block;
}

.login-view-view {
  background: white;
  margin: 40rpx;
  border-radius: 15rpx;
  border: lightgrey;
  border-style: solid;
  border-width: 1rpx;
}

.title-view-login {
  text-align: center;
  position: relative;
}

.title-text-login {
  font-size: 30rpx;
  color: black;
  padding: 30rpx;
}

#dialog-del {
  width: 50rpx;
  height: 50rpx;
  margin: 0rpx;
  border: 24rpx solid #fff;
  position: absolute;
  right: 0;
  top: 0;
}

.login-login-view {
  background: white;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border: lightgrey;
  border-style: solid;
  border-width: 1rpx;
}

.content-text-text-login {
  width: 100%;
  font-size: 28rpx;
  color: #808083;
  padding: 20rpx;
}

.content-text-text-number {
  font-size: 28rpx;
  color: #808083;
   padding: 20rpx; 
  width: 100%;
}

.button-background-view {
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  border-radius: 12rpx;
  border-width: 1rpx;
  font-size: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-color: #dedcdc;
  text-align: center;
  border-style: solid;
  background: #d43c33;
  color: white;
}

.code-view {
  width: 100%;
  display: flex;
  justify-content:flex-end;
  /*垂直居中*/
  align-items: center;
}

.verification-code-view {
  height: 70rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-radius: 12rpx;
  border-width: 1rpx;
  font-size: 30rpx;
  border-color: #dedcdc;
  text-align: center;
  border-style: solid;
  flex-shrink: 0;
   margin-right: 15rpx; 
  /*布局方式*/
  display: flex;
  /*垂直居中*/
  align-items: center;
}

.login-line-input-view {
  width: 100%;
  height: 100rpx;
  /*布局方式*/
