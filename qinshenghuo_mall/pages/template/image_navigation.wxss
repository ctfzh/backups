/* 图片导航模板模板 */

.navigation {
  clear: both;
  display: -webkit-box;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.navigation-itm {
  width: 100%;
  box-sizing: border-box;
  background: white;
}

.img-external {
  position: relative;
  overflow: hidden;
}

