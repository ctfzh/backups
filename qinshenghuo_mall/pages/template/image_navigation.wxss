#navigation-itm-name {
  font-size: 30rpx;
  color: #4d4d4d;
  margin: 10rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-align: center;
}

.tab-nav {
  display: flex;
  align-items: flex-start;
  background-color: #fff;
}

.tab-nav-item {
  width: 100%;
  height: 100%;
  font-size: 0.7rem;
  display: flex;
  flex-flow: column nowrap;
  text-align: center;
  color: #212121;
}

.tab-nav-item-img { 
  width: 100%;
}

.tab-nav-item-text {
  padding: 0.2rem 0;
}
