/* 商品列表模板  样式 */

.product_list {
  margin-right: 20rpx;
  margin-top: 20rpx;
  overflow: hidden;
}

#product-100 {
  width: 100%;
}

#product-50 {
  width: 50%;
}

.product {
  float: left;
  padding-bottom: 20rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  position: relative;
}

.product_itm {
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx;
  background: white;
}

.product_img_view {
  position: relative;
  overflow: hidden;
  width: 100%;
}

.product_img_view:before {
  content: "";
  display: block;
}

#product-img-view-50:before {
  margin-top: 100%;
}

#product-img-50 {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.product_img {
  width: 100%;
}

.product_text {
  background: white;
  margin-top:20rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  margin-bottom: 10rpx; 
  
}

.product_name {
  font-size: 30rpx;
  color: #4d4d4d;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
	letter-spacing: 2rpx;
	position: relative;
}

.product_price {
  font-size: 32rpx;
  color: #d43c33;
  margin-right: 80rpx;
  overflow: hidden;
  margin-top: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.product_price_ji{
  width: 180rpx;
}

.shopping_trolley_img {
  width: 45rpx;
  height: 45rpx;
  margin: 20rpx;
}

#simpleness-view-price {
  font-size: 28rpx;
  color: #fff;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  text-align: center;
  background-color: #000;
  opacity: 0.6;
}

#buy_words {
  font-size: 24rpx;
  color: #fff;
  margin: 20rpx;
  padding-left: 15rpx;
  padding-right: 15rpx;
  padding-top: 11rpx;
  padding-bottom: 11rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  text-align: center;
  background-color: #f7782c;
}

