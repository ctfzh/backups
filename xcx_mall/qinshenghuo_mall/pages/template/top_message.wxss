/* 顶部弹窗 */
.toptips {
  display: block;
  position: fixed;
  -webkit-transform: translateZ(0) translateY(-100%);
  width: 100%;
  /* 至少有一行的高度，保证第一次动画显示正常 */
  min-height: 100rpx;
  top: 0;
  line-height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  color: #fff;
  background-color: #5e5e5e;
  z-index: 110;
  /* 动画部分 */
  transition: all 0.4s ease;
  opacity: 0.9;
}
.toptips--show {
  -webkit-transform: translateZ(0) translateY(0);
}
