/* 推广统计  */
/* 引入样式 */
@import "../template/top_message.wxss";
@import "../template/loading_fall_ui.wxss";
@import "../distribution/distribution_anomaly.wxss";

/*顶部  */

.spr_sta_container .top {
  background: -webkit-linear-gradient(left top, #f04735, #f04735, #ff5a47);
}

/*成交金额  佣金收益   */

.first_floor {
  display: flex;
  height: 210rpx;
  flex-flow: row nowrap;
  align-items: center;
  color: #fff;
}

.fir_item {
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}

.fir_item .num {
  font-size: 38rpx;
  font-weight: bold;
  display: flex;
  line-height: 30rpx;
}
.fir_item .money_wraper {
  position: relative;
}

.fir_item .unit {
  font-size: 28rpx;
  position: absolute;
  left: -30rpx;
  bottom: 0;
  line-height: 22rpx;
}

.fir_item .des {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 20rpx;
  line-height: 22rpx;
}

/* 订单 客户 邀请部分 */

.second_floor {
  display: flex;
  height: 146rpx;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid rgba(255, 255, 255, 0.3);
  color: #fff;
}

/* 项  */

.sec_item {
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
  text-justify: center;
  align-items: center;
}

.sec_item .num {
  font-weight: bold;
  font-size: 32rpx;
  line-height: 25rpx;
}

.sec_item .unit {
  font-size: 24rpx;
}

.sec_item .des {
  font-size: 24rpx;
  opacity: 0.8;
  margin-top: 20rpx;
  line-height: 22rpx;
}

/*中间线  */

.second_floor .item_line {
  width: 1rpx;
  height: 50rpx;
  background: #fff;
  opacity: 0.3;
}

/*中部  */

.middle {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  margin-top: 20rpx;
  background: #fff;
}

/* 导航  */

.middle .nav {
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
  border: 1rpx solid #db3927;
  border-radius: 4rpx;
  color: #db3927;
  font-size: 28rpx;
}

.middle .nav_item {
  width: 179rpx;
  height: 64rpx;
  box-sizing: border-box;
  line-height: 64rpx;
  text-align: center;
}

.middle .nav_item:nth-child(1), .middle .nav_item:nth-child(2) {
  border-right: 1rpx solid #db3927;
}

/*激活状态  */

.middle .nav .active {
  background: #db3927;
  color: #fff;
}

/* 数据统计 */

.mid_statis {
  display: flex;
  width: 100%;
  margin: 45rpx 0;
}

.sta_item {
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  font-weight: bold;
}
.sta_item .num {
  font-size: 32rpx;
  line-height: 25rpx;

}
.sta_item .money_wraper {
  position: relative;
    color: #2c2f33;
  font-size: 32rpx;
  font-weight: bold;
    line-height: 25rpx;
}
.sta_item .unit {
  position: absolute;
  left: -30rpx;
  bottom: 0;
  line-height: 20rpx;
  font-size: 24rpx;
}
/* .sta_item .num {
  color: #2c2f33;
  font-size: 32rpx;
  font-weight: bold;
} */

.sta_item .des {
  color: #757a80;
  font-size: 24rpx;
  margin-top: 20rpx;
  opacity: 0.8;
  line-height: 22rpx;
}

/* 底部 */

.bottom {
  margin-top: 20rpx;
  background: #fff;
}

.bot_nav {
  display: flex;
  height: 90rpx;
  color: #2c2f33;
  font-size: 28rpx;
  border-bottom: 1rpx solid #dedfe0;
}

.bot_nav_item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

/*导航激活状态  */

.bot_nav .active {
  color: #db3927;
  border-bottom: 3rpx solid #db3927;
}

.ec-container {
  width: 100%;
  height: 600rpx;
  background: #fff;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

/* 统计表 */
.statis_chart{
  font-size: 30rpx;
  padding: 0rpx 30rpx;
  margin: 20rpx 0rpx;
  color: #757A80;
}
.statis_chart_th{
  color: #2C2F33;
}
.statistics_item{
  display: flex;
  flex-flow: row nowrap;
  text-align: center;
  line-height: 60rpx;
  border-bottom: 1rpx solid #DEDFE0;
}
.statistics_item:last-child{
  border: none;
}
.date_time{
flex: 1;
}
.data_text{
flex: 1;
}