/* 添加，编辑，删除收货地址 */
@import "../template/top_message.wxss";
@import "../template/loading_fall_ui.wxss";

.dispose{
	margin-top: 12rpx;
	background-color: #fff;
	padding-left: 40rpx;
}

.dispose_item{
	height: 106rpx;
	border-bottom-width: 1rpx;
	display: flex;
	align-items: center;
}
.dispose_item:last-child{
	border-width: 0rpx;
	height: auto;
	padding: 40rpx 0rpx;
	align-items:  flex-start;
}
.item_left{
	width: 145rpx;
	font-size: 28rpx;
	font-weight: bold;
}
.item_rigth{
	flex: 1;
	height: 100%;
	font-size: 28rpx;
	margin-right: 40rpx;
}
input{
	height: 100%;
}
.placeholder{
	font-size: 24rpx;
	color: #B4B6B8;
}

.btn{
	padding: 80rpx 40rpx;
}

button[plain]{
	height: 90rpx;
	margin-bottom: 40rpx;
	background-color: #DB3927;
	border-radius: 6rpx;
	color: #fff;
	font-size: 36rpx;
	font-weight: bold;
	border: none;
}
button[plain].delete{
	background-color: #fff;
	color: #DB3927;
}

picker{
	height: 100%;
	position: relative;
}
.picker{
	position: absolute;
	top: 0rpx;
	bottom: 0rpx;
	right: 0rpx;
	left: 0rpx;
	display: flex;
	align-items: center;
}

.picker_text{
	flex: 1;
}

.arrows_right{
	width: 30rpx;
	height: 30rpx;
	display: flex;
}
.arrows_right image{
	width: 100%;
	height: 100%;
}

textarea{
	height: 60rpx;
	width: 527rpx;
	font-size: 28rpx;
}
