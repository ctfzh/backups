/* 商户设置 */
@import "/pages/merchant/list.wxss";

.set_up_max{
	width: 100vw;
	height: 100vh;
	overflow: hidden;
	position: relative;
}
.set_up_top{
	font-size: 32rpx;
	height: 97rpx;
	display: flex;
	justify-content: space-around;
}

.top_item{
	height: 100%;
	width: 86rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	white-space:nowrap;
}

.sele_item{
	color: #00AAEE;
	border-bottom: 3rpx solid #00AAEE;
}

.set_up_bottom{
	position: absolute;
	top: 120rpx;
	bottom: 0rpx;
	left: 0rpx;
	right: 0rpx;
}
.swiper{
	width: 100%;
	height: 100%;
}
.scroll{
	height: 100%;
}
.fill{
	padding-top: 20rpx;
}
.add{
	margin: 0rpx 20rpx;
}

.jump_item{
	height: 130rpx;
	margin-bottom: 20rpx;
	background-color: #fff;
	padding-left: 25rpx;
	display: flex;
	align-items: center;
	border-radius: 8rpx;
}
.jump_item:first-child{
	margin-bottom: 40rpx;
}
.jump_img{
	width: 40rpx;
	height: 40rpx;
	display: flex;
	margin-right: 28rpx;
}
.jump_img image{
	width: 100%;
	height: 100%;
}
.jump_text{
	flex: 1;
	font-size: 30rpx;
}
.set_jump{
	padding-left: 20rpx;
	padding-right: 20rpx;
}

.jump_h1{
	width: 100%;
	line-height: 32rpx;
}
.jump_h2{
	width: 100%;
	font-size: 26rpx;
	line-height: 28rpx;
	margin-top: 19rpx;
}

.jump_right{
	height: 100%;
	display: flex;
	align-items: center;
	font-size: 26rpx;
}