<!-- 添加员工 -->
<view class='add_max font_color4' hidden='{{feedback}}'>
	<form bindsubmit="formSubmit">

	<view class='add_item'>
		<view class='item_cont line_color'>
			<text class='item_text'>员工名称</text>
			<input type='text' class='item_input' placeholder='员工账号名称' placeholder-class='font_color2' name=""></input>
		</view>
	</view>

	<view class='add_item'>
		<view class='item_cont line_color'>
			<text class='item_text'>账号</text>
			<input type='text' class='item_input' placeholder='未设置' placeholder-class='font_color2' name=""></input>
		</view>
	</view>

	<view class='add_item'>
		<view class='item_cont line_color'>
			<text class='item_text'>密码</text>
			<input type='text' class='item_input' placeholder='未设置' placeholder-class='font_color2' name=""></input>
		</view>
	</view>
	<view class='add_item' catchtap='jump_url'>
		<view class='item_cont line_color'>
			<text class='item_text'>所属门店</text>
			<view class='jump_right'>
				<view class='right_text font_color2'>烫面包-古镇一店</view>
				<view class='right_arrow'>
					<image src="../img/income/right_arrow.png"></image>
				</view>
			</view>
		</view>
	</view>

	<view class='add_item'>
		<view class='item_cont line_color'>
			<text class='item_text'>是否店长</text>
    		<switch checked />
		</view>
	</view>

	<view class='add_item'>
		<view class='item_cont line_color'>
			<text class='item_text'>店长密码</text>
			<view class='item_text'>9264</view>
		</view>
	</view>
	
	<view class='button_t'>
		<button class='submit' form-type="submit" hover-class="hover" plain="true">保存</button>
	</view>
	</form>
</view>