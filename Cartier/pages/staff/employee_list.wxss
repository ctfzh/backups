/* 员工列表 */

page {
  background-color: #f3f3f3;
}

.menu_top {
  height: 80rpx;
  display: flex;
  border-left: 0rpx;
  border-right: 0rpx;
  background-color: #ebebeb;
  color: #2c2f33;
}

.menu_item {
  flex: 1;
  height: 100%;
  font-size: 30rpx;
  border-left: 1rpx solid #fff;
  border-right: 0rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.menu_item:first-child {
  border-left: 0rpx;
}

.menu_item_z {
  position: absolute;
  top: 0rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
}

.menu_item_mun {
  margin-left: 5rpx;
}

.menu_item_sele {
  color: #fff;
  background-color: #8f1113;
}

.search {
  position: relative;
  width: 710rpx;
  height: 70rpx;
  background-color: #fff;
  margin: 30rpx auto 0rpx auto;
  font-size: 26rpx;
  text-align: center;
  border-radius: 2rpx;
}

.search_img {
  position: absolute;
  top: 0rpx;
  left: 30rpx;
  bottom: 0rpx;
  display: flex;
  align-items: center;
}

.search_img image {
  height: 30rpx;
  width: 30rpx;
}

.search_input {
  height: 100%;
  padding: 0rpx 70rpx;
}

.depart_ps_wraper {
  padding: 0 30rpx 0 20rpx;
  background: #fff;
}
.employee_item_wraper {
   padding-bottom: 10rpx;
}
.depart_ps_box {
  border-top: 1rpx solid #e6e6e6;
  font-size: 24rpx;
}

.employee_item_wraper .employee_department,
.employee_item_wraper .employee_position {
  padding: 10rpx 0;
  color: #9ca0a6;
  background: #fff;
  word-break: break-all; /*字母，数字换行*/
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 1; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
}

.employee_list {
  font-size: 30rpx;
  position: absolute;
  top: 210rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 100rpx;
  overflow: auto;
}

.employee_item {
  height: 160rpx;
  background-color: #fff;
  /* border-top: 1rpx solid #e6e6e6; */
  padding: 0rpx 30rpx 0rpx 20rpx;
  display: flex;
}

.employee_item:first-child {
  border-top: 0rpx;
}

.employee_item_img {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
}

.employee_item_img image {
  width: 120rpx;
  height: 120rpx;
}

.employee_item_left {
  flex: 1;
  display: flex;
  align-items: center;
}

.employee_item_info {
  height: 120rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  margin: 0rpx 20rpx;
}

.name {
  flex: 1;
  display: flex;
  color: #2c2f33;
  word-break: break-all; /*字母，数字换行*/
  text-overflow: ellipsis;
  display: -webkit-box; /** 对象作为伸缩盒子模型显示 **/
  -webkit-box-orient: vertical; /** 设置或检索伸缩盒对象的子元素的排列方式 **/
  -webkit-line-clamp: 1; /** 显示的行数 **/
  overflow: hidden; /** 隐藏超出的内容 **/
}

.wechat {
  color: #9ca0a6;
}

.phone {
  color: #757a80;
}

.employee_item_right {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  line-height: 30rpx;
}

.right_img {
  margin-left: 15rpx;
  display: flex;
  align-items: center;
  width: 13rpx;
  height: 24rpx;
}

.right_img image {
  width: 100%;
  height: 100%;
}

.state {
  color: #757a80;
}

.photograph {
  background-color: #8f1113;
  color: #fff;
  width: 132rpx;
  height: 53rpx;
  border-radius: 2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.timer {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  color: #c73c3e;
  display: flex;
  justify-content: center;
  align-items: center;
}

.green {
  color: #51c332;
}

.decoration {
  margin: 0rpx 20rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}
