/* 员工信息 */
.employee_info_max{
  position: absolute;
  top: 0rpx;
  bottom: 120rpx;
  left: 0rpx;
  right: 0rpx;
  background-color: #fff;
  overflow: auto;
}
.employee_info_item{
  margin-left: 60rpx;
  padding: 35rpx 0rpx;
  font-size: 30rpx;
  color: #757A80;
  border-top: 1rpx solid #f1efec;
  display: flex;
}
.employee_info_item:first-child{
  border-top: 0rpx;
}
.employee_info_h1{
  margin-right: 70rpx;
}
.employee_info_h{
  flex: 1;
  margin: 0rpx 20rpx;
}
.employee_info_h2{
  color: #2C2F33;
}
.employee_info_h3{
  margin-top: 20rpx;
  font-size: 26rpx;
}
.employee_info_img{
  width: 370rpx;
}
.an{
  position: fixed;
  display: flex;
  align-items: center;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  background-color: #FFF;
  padding-top: 20rpx;
}
.sign_an{
  width: 100%;
  height: 100rpx;
  font-size: 30rpx;
  margin: 0rpx auto;
  background-color: #8F1113!important;
  border-radius: 0rpx;
  color: #FFF;
  display: flex;
  align-items: center;
  justify-content: center;
}