 /* 绑定手机号  */
page{
  border-top: 1rpx solid #E3E4E5;
}
.bottom_max{
  position: absolute;
  top: 170rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
   overflow: hidden;
}
.bind_account_top{
  display: flex;
  margin: 80rpx 40rpx 0rpx 40rpx;
  border-radius: 6rpx;
  overflow: hidden;
}
.top_an{
  flex: 1;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #E8E9EB;
  font-size: 32rpx;
}
.top_an_sele{
  background-color: #F24B4B;
  color: #fff;
}
.bind_account_bottom{
	height: 100%;
  display: flex;
  /* align-items: center; */
  justify-content: center;
  overflow: hidden;
}
.promptly{
   position: relative;
  margin-top: 330rpx;
  width: 335rpx;
  height: 90rpx;
}
.promptly_authorization{
  width: 100%;
  height: 100%;
  border: 2rpx solid #F24B4B !important;
  border-radius: 4rpx !important;
  opacity: 0.5;
}
.authorization_text{
   position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #F24B4B;
}
.bottom_obtain{
  margin-top: 130rpx;
  flex: 1;
}
.bottom_item{
  height: 90rpx;
  margin: 0rpx 40rpx;
  border-bottom-width: 1rpx;
  margin-bottom: 50rpx;
  display: flex;
  align-items: center;
}
.input{
  flex: 1;
 font-size: 28rpx; 
 height: 100%;
}
.proving_an{
  height: 40rpx;
  border-left-width: 2rpx;
  font-size: 28rpx;
  color: #508BEB;
  width: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.retry_an{
  color: #ccc;
}

.confirm_an{
  background-color: #F24B4B;
  margin: 0rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 90rpx;
  color: #fff;
  border-radius: 4rpx;
  font-size: 32rpx;
}

.slide_switch_left{
  transform: translateX(-100%);
  transition:all 0.2s ease;  
}
.slide_switch_right{
  transform: translateX(100%);
  transition:all 0.2s ease;  
}
.slide_switch{
  transform: translateX(0);
}