/*订单列表  */
@import '../../app.wxss';

Page {
  height: 100%;
  background: #F0F1F2;
}

/*切换start  */

.container {
  display: flex;
  height: 100%;
  flex-flow: column nowrap;
}

.nav {
  display: flex;
  justify-content: center;
  border-top-width: 1rpx;
  padding: 50rpx 0;
  background: #fff;
}

.nav .nav_item {
  width: 335rpx;
  height: 90rpx;
  background: #E8E9EB;
  font-size: 32rpx;
  line-height: 90rpx;
  text-align: center;
}

.nav .nav_item:first-child {
  border-radius: 4rpx 0 0 4rpx;
}

.nav .nav_item:last-child {
  border-radius: 0 4rpx 4rpx 0;
}

.nav .active {
  background: #F24B4B;
  color: #fff;
}
.spacing_block {
  height: 12rpx;
  background: #F0F1F2;
}
/*切换end  */

/*列表start  */

.sroll_list_wraper {
  position: relative;
  flex: 1;
}

.sroll_list_wraper .sroll_list {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: auto;
}

.container .store_wraper .spacing_block{
  height: 12rpx;
  background: #F0F1F2;
}

.container .store {
  display: flex;
  justify-content: space-between;
  line-height: 85rpx;
  padding-left: 40rpx;
  border-bottom-width: 1rpx;
  font-size: 28rpx;
}

.container .store .left {
  display: flex;
  align-items: center;
  font-weight: bold;
}

.icon_wraper {
  width: 13rpx;
  height: 24rpx;
  margin-left: 29rpx;
}

.icon_wraper image {
  display: block;
}

.store .icon_wraper image {
  width: 100%;
  height: 100%;
}

.store .right {
  margin-right: 30rpx;
}

.list {
  padding: 15rpx 39rpx;
}

.good {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  line-height: 55rpx;
}
.left{
	flex: 1;
	margin-right: 20rpx;
}

.goods_list .good .right {
  display: flex;
}
.right .num{
	margin-right: 45rpx;
}

.list .total {
  display: flex;
  text-align: right;
  align-items: center;
  justify-content: space-between;
}

.total .dot {
  text-align: left;
}

.total .num {
  font-size: 26rpx;
  margin-right: 20rpx;
}
.total_c{
	display: flex;
	align-items: center;
}

.total .label {
  font-size: 26rpx;
}

.total .price {
	margin-left: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.price_fu{
  font-size: 28rpx;
}

.btn_wraper {
  display: flex;
  justify-content: flex-end;
}

.btn_wraper .btn {
  width: 168rpx;
  height: 56rpx;
  font-size: 26rpx;
  line-height: 56rpx;
  text-align: center;
  border-radius: 4rpx;
  box-sizing: border-box;
  margin: 20rpx 0;
}

.btn_wraper .btn_pay {
  background: #F24B4B;
  color: #fff;
  margin-left: 30rpx;
}

.btn_wraper .btn_order {
  border: 1rpx solid #AEB7BF;
  line-height: 54rpx;
}

.sroll_list_wraper .error {
  height: 100%;
}

.store_wraper {
  background: #fff;
}