/* 我的 */
@import '../../app.wxss';

Page {
  background: #f0f1f2;
}

image {
  width: 100%;
  height: 100%;
}

.panel {
  display: flex;
  height: 315rpx;
  flex-flow: column nowrap;
  align-items: center;
  background: #fff;
  font-size: 28rpx;
  border-top-width: 1rpx;
  border-bottom-width: 1rpx;
}

.panel .user_img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-top: 50rpx;
}

.panel .name {
  margin-top: 15rpx;
  font-weight: bold;
  line-height: 40rpx;
}

.panel .phone {
  line-height: 40rpx;
}

.list {
  margin-top: 30rpx;
}

.list-itme {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 35rpx 25rpx 30rpx;
  background: #fff;
  border-bottom-width: 1rpx;
}

.list-itme:first-child {
  border-top-width: 1rpx;
}

.list-itme .left {
  display: flex;
  font-size: 32rpx;
  align-items: center;
}

.list-itme .left .address {
  width: 40rpx;
  height: 40rpx;
}

.list-itme .left .address .icon_wraper {
  width: 100%;
  height: 100%;
}

.list-itme .left .txt {
  margin-left: 30rpx;
}

.list-itme .right {
  display: flex;
  align-items: center;
  width: 13rpx;
  height: 24rpx;
}

.list-itme .left .use_know {
  width: 40rpx;
  height: 40rpx;
}

.list-itme .left .use_know .icon_wraper {
  width: 100%;
  height: 100%;
}

.no_entry {
  position: absolute;
  top: 315rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  display: flex;
  justify-content: center;
  background-color: #fff;
}

.no_entry_an {
   position: relative;
  margin-top: 100rpx;
  width: 335rpx;
  height: 90rpx;
  border-radius: 4rpx;
  background-color: #fff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #F24B4B;
}
.no_entry_boder{
   position: absolute;
   top: 0rpx;
   bottom: 0rpx;
   left: 0rpx;
   right: 0rpx;
   opacity: 0.5;
  border: 2rpx solid #F24B4B;
}
