/*新增收货地址  */
@import '../overall_situation_modular/top_message.wxss';
Page {
  background: #f0f1f2;
}

/*通用样式  */
view {
  box-sizing: border-box;
}
.label {
  width: 145rpx;
  font-size: 28rpx;
  color: #2c2f33;
  font-weight: bold;
}

input {
  border: 0;
  flex: 1;
  color: #2c2f33;
  font-size: 28rpx;
}

.placeholder {
  color: #b4b6b8;
}

/*输入信息系列表  */

.info_list {
  padding-left: 40rpx;
  background: #fff;
  margin-top: 12rpx;
}

.info_item {
  display: flex;
  height: 105rpx;
  line-height: 105rpx;
  align-items: center;
  border-top: 1rpx solid #e3e4e5;
}

.info_item:first-child {
  border-top: 0;
}

.info_item .input {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;
  font-size: 28rpx;
  color: #B4B6B8;
}
.info_item .icon {
  display: flex;
  align-items: center;
  width: 13rpx;
  height: 24rpx;
  margin-right: 40rpx;
}
.info_item .icon image{
  width: 100%;
  height: 100%;
}
.line_wraper {
  padding-left: 145rpx;
}
.line {
  width: 100%;
  height: 1rpx;
  background: #E3E4E5;
}

.sex {
  display: flex;
  margin-left: 145rpx;
}

.sex .item {
  line-height: 43rpx;
  padding: 0 30rpx;
  margin: 20rpx 0;
  color: #2c2f33;
  background: #fff;
  font-size: 26rpx;
  border: 1rpx solid #e3e4e5;
  border-radius: 4rpx;
}

.sex .item:last-child {
  margin-left: 20rpx;
}

.sex .active {
  background: #F24B4B;
  color: #fff;
  border: 0;
}

.btn_wraper {
  width: 100%;
  padding:0 40rpx;
}
/*按钮  */
.btn {
  line-height: 95rpx;
  text-align: center;
  background: #fff;
  border-radius: 6rpx;
  color: #F24B4B;
  font-size: 36rpx;
  font-weight: bold;
}
.btn_wraper .active {
  background: #F24B4B;
  color: #fff;
}

.btn:first-child {
  margin-top: 40rpx;
}
.btn:last-child {
  margin-top: 30rpx;
}

/*收货地址颜色  */
.info_item .font_color {
  color: #2c2f33;
}

/*  */
.input_text {
  flex: 1;
  padding-right: 50rpx;
  height: 105rpx;
}

