/* 引入底部logoCSS */
@import "../custom_modular/bottom_Logo.wxss"; 
/* 裂变红包CSS */
image{
  width: 100%;
  height: 100%;
}
.fission_back_color{
  position: absolute;
  top: 0rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  /* background: linear-gradient(to bottom, #D42A24, #9C1B14); */
  background-color: #b51e16;
}
.max_fission{
  position: relative;
  overflow: auto;
  height: 100vh;
}
.fission_back{
  height: 450rpx;
}

.receive_envelopes{
  position: relative;
  border-radius: 4rpx;
  padding: 40rpx 0rpx 20rpx 0rpx;
  margin: 20rpx  20rpx 0rpx 20rpx;
}

.envelopes_back{
  position: absolute;
  top: 0rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  background-color: #000;
  opacity: 0.2;
  border-radius: 4rpx;
}
.envelopes{
  height: 180rpx;
  padding: 0rpx 30rpx;
  position: relative;
  margin: 0rpx 20rpx;
  background-color: #FFF;
  display: flex;
  align-items: center;
}
.envelopes_yes{
  height: 100%;
  flex: 1;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  border-radius: 4rpx;
}
.envelopes_no{
  flex: 1;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  border-radius: 4rpx;
  padding: 0rpx 80rpx;
}
.envelopes_no_line{
  flex: 1;
  border-bottom: 1rpx solid #8B9199;
}
.envelopes_no_title{
  padding: 0rpx 30rpx;
}
.envelopes_money{
  font-size: 60rpx;
  color: #F52727;
  font-weight: bold;
} 
.envelopes_details{
  flex: 1;
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  padding: 0rpx 30rpx;
}
.envelopes_details_title{
  font-size: 32rpx;
  margin-bottom: 15rpx;
}

.envelopes_details_text_list{
  display: flex;
  font-size: 22rpx;
  align-items: center;
  margin-top: 5rpx;
}
.list_d{
  width: 5rpx;
  height: 5rpx;
  background-color: #757A80;
  border-radius: 50%;
  margin-right: 10rpx;
}
.mo_fu{
  font-size: 24rpx;
}
.receive_an{
  width: 150rpx;
  height: 50rpx;
  background-color: #F52727;
  border-radius: 25rpx;
  font-size: 22rpx;
  color: #FFF;
  display: flex;
  align-items: center;
  justify-content: center;
}
.already{
  background-color: #bbb;
  /* font-size: 22rpx;
  color: #ccc; */
}

.operation_an{
  display: flex;
  margin: 0rpx 40rpx;
  justify-content: space-between;
}
.operation_img{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.more_favorable_an{
  width: 305rpx;
  position: relative;
  height: 90rpx;
  margin: 30rpx 0rpx;
  background: linear-gradient(to right, #FF3C26, #F23924);
  border-radius: 4rpx;
  font-size: 28rpx;
  color: #FFF;
  display: flex;
  align-items: center;
  justify-content: center;
}
/* 已领取人员CSS */
.already_received{
  margin: 40rpx;
}
.already_received_title{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  font-size: 22rpx;
  color: #FFF;
  opacity: 0.6;
  padding: 10rpx;
}
.already_received_line{
  flex: 1;
  border-bottom: 1rpx solid #FFF;
}
.already_received_text{
  padding: 0rpx 25rpx;
}
.already_user{
}
.already_user_list{
  display: flex;
  flex-flow: row nowrap;
  margin-top: 20rpx;
}
.user_portrait{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}
.user_portrait_img{
  border-radius: 50%;
}
.user_info{
  flex: 1;
  margin-left: 30rpx;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
}
.user_name{
  line-height: 24rpx;
}
.user_itme{
  font-size: 22rpx;
  line-height: 22rpx;
  margin-top: 20rpx;
}
.user_itme_date{
  margin-right: 15rpx;
}
.user_receive_money{
  font-size: 24rpx;
  display: flex;
  align-items: center;
  color: #fff;
}

.font_overflow{
  -webkit-line-clamp: 1; /** 显示的行数 **/
}
.bottom_line{
  height: 1rpx;
  margin: 0rpx 40rpx;
  background-color: #FFF;
  opacity: 0.4;
}
