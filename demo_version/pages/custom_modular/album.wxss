/*引用全局样式  */
@import "../../app.wxss";

/* 相册组件CSS */
.album_style{
  background-color: #fff;
}

.album_top{
  padding: 25rpx 25rpx;
  border-width: 0rpx;
  border-bottom-width: 1rpx;
  border-style: solid;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.album_top_left_text{
  font-size: 32rpx;
}
.album_top_right{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
  
}
.album_list_url{
  position: absolute;
  top: 0rpx;
  bottom: 0rpx;
  right: 15rpx;
  width: 150rpx;
}
.album_top_right_text{
  font-size: 28rpx;
}

.album_top_right_img{
  width: 31rpx;
  height: 30rpx;
  display: flex;
  margin-top: 2rpx;
}
image{
  width: 100%;
  height: 100%;
}

.album_bottom{
  padding: 20rpx 0rpx;
}

.album_bottom_scroll{
  width: 100%;
  height: 240rpx;
  white-space: nowrap;
}

.album_bottom_img_list{
  width: 240rpx;
  height: 240rpx;
  margin-left: 20rpx;
   display: inline-block;
}
.album_bottom_img_list:last-child{
