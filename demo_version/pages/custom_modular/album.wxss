}
/* 九宫格  */
.nine_img{
  width: 230rpx;
  height: 230rpx;
  margin-top: 10rpx;
}
.album_nine_img{
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  padding: 10rpx 20rpx 20rpx 20rpx;
}

