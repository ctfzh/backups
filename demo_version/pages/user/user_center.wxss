/* 引入底部logoCSS */
@import "../custom_modular/bottom_Logo.wxss"; 
/* 我的页面CSS */
.max_center{
	min-height: 100vh;
}
image{
  width: 100%;
  height: 100%;
}
.center_top_info{
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.user_style{
  height: 215rpx;
  background: #5885cf;
  padding-top: 45rpx;
  position: relative;
}
.user_style_back{
  position: absolute;
  top: 0rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  overflow: hidden;
}

/* 头像CSS */
.user_portrait{
	position: relative;
  width: 120rpx;
  height: 120rpx;
  margin: 0rpx auto;
  padding: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.5);
}

.portrait_img{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}
.img_radius{
  border-radius: 50%;
}

/* 用户名CSS */
.user_name{
	display: block;
  position: relative;
  margin: 20rpx 25rpx 0rpx 25rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  text-shadow: 0rpx 0rpx 2px rgba(0, 0, 0, 0.5);
}

.value_details{
  display: flex;
  flex-flow: row nowrap;
  padding: 30rpx 0rpx;
}
.value_list{
  width: 33%;
  border-width: 0rpx;
  border-style: solid;
  border-right-width: 1rpx;
}
.value_list:last-child{
  border-right-width: 0rpx;
}
.value_text{
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
}
.unit{
  color: #a7a8a9;
  font-weight: normal;
  margin-left: 6rpx;
}
.coupon_value{
  color: #f7a80a;
}
.balance_value{
  color: #f56618;
}
.value_details_info{
  display: flex;
  justify-content: center;
  align-items: center;
}
.value_details_img{
  width: 45rpx;
  height: 45rpx;
}
.value_details_text{
  font-size: 30rpx;
  padding: 10rpx 0rpx 10rpx 10rpx;
}

/* 会员卡CSS */
.center_member_jump{
  height: 90rpx;
  background-color: #FFF;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 30rpx;
  margin-bottom: 30rpx;
}
.member_info{
  display: flex;
  align-items: center;
}
.member_img{
  width: 40rpx;
  height: 40rpx;
}
.member_text{
  font-size: 32rpx;
  margin-left: 20rpx;
}
.member_info_jump_text{
  font-size: 24rpx;
}
 .member_info_jump{
  height: 30rpx;
   display: flex;
   line-height: 30rpx;
} 
.right_arrow{
  margin-left: 20rpx;
}

/* 关联页详情跳转CSS */
.center_relevant_jump{
  background-color: #fff;
}
.center_relevant_list{
  height: 90rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx 30rpx;
  border-width: 0rpx;
  border-style: solid;
  border-bottom-width: 1rpx;
}
.center_relevant_list:last-child{
  border-bottom-width: 0rpx;
}
.center_relevant_img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.center_relevant{
  display: flex;
  align-items: center;
  font-size: 32rpx;
}

.no_entry {
  display: flex;
  justify-content: center;
  background-color: #fff;
}

.no_entry_an {
   position: relative;
  margin-top: 100rpx;
  width: 335rpx;
  height: 90rpx;
  border-radius: 4rpx;
  background-color: #fff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #F24B4B;
}
.no_entry_boder{
   position: absolute;
   top: 0rpx;
   bottom: 0rpx;
   left: 0rpx;
   right: 0rpx;
   opacity: 0.5;
  border: 2rpx solid #F24B4B;
}


.no_bottom{
	position: absolute;
	left: 0rpx;
	right: 0rpx;
	bottom: 0rpx;
}