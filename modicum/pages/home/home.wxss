/* 首页 */
.home_max{
  overflow: hidden;
}
.swiper_home{
  position: relative;
  height: 610rpx;
  z-index: 9;
}
.swiper_home swiper{
  width: 100%;
  height: 100%;
}
.swiper_home swiper image{
  width: 100%;
  height: 100%;
}

.display_quantity{
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.display_quantity_text{
   width: 12rpx;
   height: 12rpx;
   border-radius: 50%;
   opacity: 0.4;
   background-color: #fff;
   margin-left: 10rpx;
}
.display_quantity_max{
   opacity: 1;
}
.home_bottom{
  position: absolute;
  top: 610rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
}
.home_bottom_img{
  position: absolute;
  /* top: 0rpx; */
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  display: flex;
}
.top_bottom_img{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
}

.home_bottom image{
  width: 100%;
}
.top_img{
  position: absolute;
   top: 0rpx; 
  left: 0rpx;
  right: 0rpx;
  display: flex;
}
.home_an{
  margin: 170rpx 60rpx 0rpx 60rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.an_item{
  position: relative;
  width: 300rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #fff;
  font-weight: bold;
}
.an_item_top{
  position: absolute;
  top: 0rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  background-color: #008866;  
   z-index: 1;
   display: flex;
   align-items: center;
   justify-content: center;
  border-radius: 6rpx;
}
.an_item_bottom{
  position: absolute;
  top: 0rpx;
  bottom: 0rpx;
  left: 0rpx;
  right: 0rpx;
  z-index: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom_an{
  width: 258rpx;
  height: 75rpx;
  box-shadow: 0rpx 8rpx 20rpx #bae7db;
}